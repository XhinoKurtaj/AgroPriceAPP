@model AgroPrice.Services.PointOfSale.Models.UpdateSellerWithPointOfSaleModel

@{
    ViewData["Title"] = "UpdateSellerWithPointOfSaleAsync";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<center>
    <h1>Nrysho detajet pikes se shitje shitesit</h1>
</center>
<hr />
<div class="row" style="margin-bottom: 30px;">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="UpdateSellerWithPointOfSale">
            <span class="text-danger">@ViewBag.Error</span>
            <input asp-for="Id" hidden class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Emri i shitesit</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email i shitesit</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Tel. Shitesi</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WholeSaleMarketId" class="control-label">Tregu</label>
                @Html.DropDownListFor(model => model.WholeSaleMarketId, (IEnumerable<SelectListItem>)ViewBag.WholeSaleMarketDropdown, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="PointOfSaleDescription" class="control-label">Pershkrimi i pikes se shitjes</label>
                <input asp-for="PointOfSaleDescription" class="form-control" />
                <span asp-validation-for="PointOfSaleDescription" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

