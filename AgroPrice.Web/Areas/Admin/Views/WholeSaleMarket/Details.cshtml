@model AgroPrice.Services.WholeSaleMarket.Models.WholeSaleMarketModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Name</h1>
        <p class="lead text-muted">Adresa: @Model.Address</p>
    </div>
</section>

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <i class="fas fa-table"></i>
                Krijo nje pike shitje
            </div>
            <div class="mr-auto col-lg-8 col-md-6 col-sm-12" style="text-align: end">
                <a  href="@Url.Action("CreateSellerWithPointOfSale", "WholeSaleMarket", new{id=@Model.Id})" class="btn btn-primary">Krijo nje pike shitje</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" style="text-align: center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Pershkrimi</th>
                        <th>Tregu</th>
                        <th>Shitesi</th>
                        <th><i class="fa fa-edit"></i></th>
                        <th><i class="fa fa-trash"></i></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Pershkrimi</th>
                        <th>Tregu</th>
                        <th>Shitesi</th>
                        <th><i class="fa fa-edit"></i></th>
                        <th><i class="fa fa-trash"></i></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var pointOfSale in Model.PointOfSales)
                    {
                        <tr>
                            <td>@pointOfSale.Description</td>
                            <td>@pointOfSale.WholeSaleMarket.Name</td>
                            <td>@pointOfSale.User.UserName</td>
                            <th>
                                <a class="btn btn-primary btn-sm" href="@Url.Action("UpdateSellerWithPointOfSale", "WholeSaleMarket", new{id=pointOfSale.Id})">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </th>
                            <th>
                                <a class="btn btn-danger remove-episode btn-sm" href="@Url.Action("DeletePointOfSale", "WholeSaleMarket", new{id=pointOfSale.Id, wholeSaleMarketId = @Model.Id})">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

