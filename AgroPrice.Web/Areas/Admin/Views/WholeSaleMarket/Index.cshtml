@model IEnumerable<AgroPrice.Services.WholeSaleMarket.Models.WholeSaleMarketModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Tables</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <i class="fas fa-table"></i>
                Tregjet
            </div>
            <div class="mr-auto col-lg-8 col-md-6 col-sm-12" style="text-align: end">
                <a asp-area="Admin" asp-action="CreateSellerWithPointOfSale" asp-controller="PointOfSale" class="btn btn-primary">Regjistro nje treg</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" style="text-align: center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Emri</th>
                        <th>Adresa</th>
                        <th><i class="fa fa-eye"></i></th>
                        <th><i class="fa fa-trash"></i></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Emri</th>
                        <th>Adresa</th>
                        <th><i class="fa fa-eye"></i></th>
                        <th><i class="fa fa-trash"></i></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var wholeSaleMarket in Model)
                    {
                        <tr>
                            <td>@wholeSaleMarket.Name</td>
                            <td>@wholeSaleMarket.Address</td>
                            <th>
                                <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "WholeSaleMarket", new{id=wholeSaleMarket.Id})">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </th>
                            <th>
                                <a class="btn btn-danger remove-episode btn-sm" href="@Url.Action("DeleteWholeSaleMarket", "WholeSaleMarket", new{ wholeSaleMarketId=wholeSaleMarket.Id})">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
