@model AgroPrice.Services.Account.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style type="text/css">
        .login-form {
            width: 340px;
            margin: 50px auto;
        }

            .login-form form {
                margin-bottom: 15px;
                background: antiquewhite;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>

    <div class="login-form">
        <form asp-action="Login">
            <h2 class="text-center">Hyr</h2>
            <span  class="text-danger">@Html.ValidationSummary()</span>
            <div class="form-group">
                <input asp-for="Email" type="text" class="form-control" placeholder="Email" required="required">
                
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Fjalekalimi" required="required">
                
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" style="background-color: green">Hyr</button>
            </div>
        </form>
        <p class="text-center"><a class="btn" style="background-color: antiquewhite" href="@Url.Action("Register","Account")">Regjistrohu si bleres</a></p>
    </div>

