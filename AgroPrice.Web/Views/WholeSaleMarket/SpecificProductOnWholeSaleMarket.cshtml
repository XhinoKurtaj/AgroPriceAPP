@model IEnumerable<AgroPrice.Services.Product.Models.ProductInCartModel>
@{
    ViewData["Title"] = "SpecificProductOnWholeSaleMarket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4;" style="background-color: antiquewhite;color:green;">Pikat e shitjes</h1>
    <p class="lead"></p>
</div>

<div class="container">
    <div class="card-deck mb-3 text-center">
        @foreach (var product in Model)
        {
            <div class="card mb-12 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">Pika: @product.PointOfSaleName </h4>
                    <h6 class="my-0 font-weight-normal">Origjina: @product.Origin </h6>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">@product.Price Leke <small class="text-muted">/ kg</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Sasia: @product.Quantity kg</li>
                    </ul>
                    <a type="button" href="@Url.Action("BookProduct","Cart",new{productId = @product.Id})" class="btn btn-lg btn-block btn-outline-success">Rezervo</a>
                    <a class="text-primary" href="@Url.Action("ValidateProductQuantity", "Cart", new {productId = @product.Id})" data-toggle="modal" data-target="#changePassword"
                       data-ajax="true" data-ajax-method="GET" data-ajax-mode="Replace" data-ajax-update="#changePasswordBody">
                        <i class="fa fa-key"></i>
                    </a>
                </div>
            </div>
        }
    </div>

</div>

@section Modals
{
    <modal id="chooseQuantity" title="Vendos sasine"></modal>
}
@se

