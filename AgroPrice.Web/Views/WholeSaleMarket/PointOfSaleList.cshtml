@model IEnumerable<AgroPrice.Services.PointOfSale.Models.PointOfSaleModel>
@{
    ViewData["Title"] = "PointOfSaleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
    @foreach (var pointOfSale in Model)
    {
        <div class="row">
            
                <div class="col-lg-12" style="background-color: beige;margin-bottom: 20px;">
                    <h2>Shitesi: @pointOfSale.User.UserName</h2>
                    <p>@pointOfSale.Description</p>
                    <p><a class="btn btn-secondary" href="@Url.Action("PointOfSaleDetails","PointOfSale", new { id=@pointOfSale.Id})" role="button">View details »</a></p>
                </div><!-- /.col-lg-4 -->
          
        </div><!-- /.row -->
    }
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">
        <!-- /END THE FEATURETTES -->

    </div>
